# Staging Environment Configuration
NODE_ENV=staging

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=${STAGING_NR_LICENSE_KEY}
NEW_RELIC_ACCOUNT_ID=${STAGING_NR_ACCOUNT_ID}
NEW_RELIC_API_KEY=${STAGING_NR_API_KEY}
NEW_RELIC_REGION=US
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.nr-data.net:4317

# Database Configuration
DB_HOST=staging-db.internal
DB_PORT=5432
DB_NAME=dashbuilder_staging
DB_USER=dashbuilder_staging
DB_PASSWORD=${STAGING_DB_PASSWORD}

# Redis Configuration
REDIS_HOST=staging-redis.internal
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# Application Settings
APP_PORT=3000
API_PORT=8080
DEBUG=false
LOG_LEVEL=info

# NRDOT Configuration
NRDOT_PROFILE=balanced
NRDOT_EXPERIMENT_ENABLED=true
NRDOT_CONTROL_LOOP_INTERVAL=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Staging Features
ENABLE_PROFILING=true
MOCK_DATA=false
VERBOSE_LOGGING=false

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80