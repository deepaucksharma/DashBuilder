{
  "name": "Application Performance Overview",
  "description": "Comprehensive view of application performance metrics",
  "permissions": "PUBLIC_READ_ONLY",
  "pages": [
    {
      "name": "Overview",
      "description": "High-level application metrics",
      "widgets": [
        {
          "title": "Transaction Volume",
          "visualization": {
            "id": "line"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT count(*) FROM Transaction TIMESERIES SINCE 6 hours ago"
            }
          },
          "layout": {
            "column": 1,
            "row": 1,
            "width": 4,
            "height": 3
          }
        },
        {
          "title": "Average Response Time",
          "visualization": {
            "id": "billboard"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT average(duration) as 'Avg Duration (s)' FROM Transaction SINCE 1 hour ago"
            }
          },
          "layout": {
            "column": 5,
            "row": 1,
            "width": 4,
            "height": 3
          }
        },
        {
          "title": "Error Rate",
          "visualization": {
            "id": "billboard"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT percentage(count(*), WHERE error IS true) as 'Error Rate %' FROM Transaction SINCE 1 hour ago"
            }
          },
          "layout": {
            "column": 9,
            "row": 1,
            "width": 4,
            "height": 3
          }
        },
        {
          "title": "Response Time by App",
          "visualization": {
            "id": "bar"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT average(duration) FROM Transaction FACET appName SINCE 1 hour ago"
            }
          },
          "layout": {
            "column": 1,
            "row": 4,
            "width": 6,
            "height": 3
          }
        },
        {
          "title": "Top Transactions",
          "visualization": {
            "id": "table"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT count(*), average(duration) FROM Transaction FACET name LIMIT 20 SINCE 1 hour ago"
            }
          },
          "layout": {
            "column": 7,
            "row": 4,
            "width": 6,
            "height": 3
          }
        }
      ]
    },
    {
      "name": "Errors & Alerts",
      "description": "Error tracking and alerting",
      "widgets": [
        {
          "title": "Error Breakdown",
          "visualization": {
            "id": "pie"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT count(*) FROM TransactionError FACET error.class SINCE 1 hour ago"
            }
          },
          "layout": {
            "column": 1,
            "row": 1,
            "width": 6,
            "height": 3
          }
        },
        {
          "title": "Error Timeline",
          "visualization": {
            "id": "area"
          },
          "configuration": {
            "nrql": {
              "query": "SELECT count(*) FROM TransactionError FACET error.class TIMESERIES SINCE 24 hours ago"
            }
          },
          "layout": {
            "column": 7,
            "row": 1,
            "width": 6,
            "height": 3
          }
        }
      ]
    }
  ]
}