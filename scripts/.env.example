# New Relic API Configuration
NEW_RELIC_API_KEY=your-new-relic-user-api-key
NEW_RELIC_ACCOUNT_ID=your-account-id
NEW_RELIC_REGION=US # or EU
NEW_RELIC_INGEST_KEY=your-ingest-key-optional

# NRDOT v2 Configuration
NRDOT_PROFILE=Conservative # Conservative, Moderate, Aggressive, Critical, Emergency
NRDOT_TARGET_COVERAGE=95 # Target process coverage percentage
NRDOT_COST_REDUCTION_TARGET=40 # Target cost reduction percentage

# Optional Configuration
NR_GUARDIAN_CACHE_TTL=3600 # Cache TTL in seconds
NR_GUARDIAN_RATE_LIMIT_MAX=25 # Max requests per minute
NR_GUARDIAN_LOG_LEVEL=info # debug, info, warn, error
NR_GUARDIAN_ENABLE_CACHE=true # Enable/disable caching

# Browser Automation (for API key creation)
NEW_RELIC_EMAIL=your-email@example.com
NEW_RELIC_PASSWORD=your-password-for-automation