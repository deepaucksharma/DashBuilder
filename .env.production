# Production Environment Configuration
NODE_ENV=production

# New Relic Configuration (Use environment variables or secrets management)
NEW_RELIC_LICENSE_KEY=${PROD_NR_LICENSE_KEY}
NEW_RELIC_ACCOUNT_ID=${PROD_NR_ACCOUNT_ID}
NEW_RELIC_API_KEY=${PROD_NR_API_KEY}
NEW_RELIC_REGION=${PROD_NR_REGION:-US}
OTEL_EXPORTER_OTLP_ENDPOINT=${PROD_OTLP_ENDPOINT:-https://otlp.nr-data.net:4317}

# Database Configuration
DB_HOST=${PROD_DB_HOST}
DB_PORT=${PROD_DB_PORT:-5432}
DB_NAME=${PROD_DB_NAME}
DB_USER=${PROD_DB_USER}
DB_PASSWORD=${PROD_DB_PASSWORD}
DB_SSL=true
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=${PROD_REDIS_HOST}
REDIS_PORT=${PROD_REDIS_PORT:-6379}
REDIS_DB=${PROD_REDIS_DB:-0}
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}
REDIS_TLS=true

# Application Settings
APP_PORT=${PORT:-3000}
API_PORT=${API_PORT:-8080}
DEBUG=false
LOG_LEVEL=warn

# NRDOT Configuration
NRDOT_PROFILE=${PROD_NRDOT_PROFILE:-conservative}
NRDOT_EXPERIMENT_ENABLED=false
NRDOT_CONTROL_LOOP_INTERVAL=300
NRDOT_MAX_SERIES_PER_HOST=5000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Production Features
ENABLE_PROFILING=false
MOCK_DATA=false
VERBOSE_LOGGING=false

# Resource Limits
MAX_MEMORY_MB=4096
MAX_CPU_PERCENT=90

# High Availability
CLUSTER_ENABLED=true
CLUSTER_NODES=${PROD_CLUSTER_NODES}

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=7